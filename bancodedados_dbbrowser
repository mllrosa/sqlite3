
# Cria tabelas
# id, preco, data_matricula, polo, curso
CREATE TABLE matriculas (
    id INTEGER PRIMARY KEY AUTOINCREMENT UNIQUE NOT NULL,
	preco INTEGER DEFAULT 0,
	data_matricula INTEGER DEFAULT 0,
	polo TEXT NOT NULL,
    curso TEXT NOT NULL
);

# id, carga_horaria, sala, professor
CREATE TABLE cursos (
    id INTEGER PRIMARY KEY AUTOINCREMENT UNIQUE NOT NULL,
    carga_horaria TEXT NOT NULL,
    sala TEXT NOT NULL,
    professor TEXT NOT NULL
);
